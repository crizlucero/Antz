<Window x:Class="Antz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="477" Width="633">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="279*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="315*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="407*"/>
        </Grid.RowDefinitions>
        <Slider Name="sldNumber" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="259" Maximum="100" ValueChanged="sldNumber_ValueChanged" SmallChange="1" IsSnapToTickEnabled="True" Margin="10,5"/>
        <Button Name="btnStart" Content="Iniciar" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Height="22" Margin="120,9"/>
        <Canvas Name="cnvWorld" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Background="#FFBBBBBB"/>
        <Label Name="lblNumber" Content="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1"/>

    </Grid>
</Window>
